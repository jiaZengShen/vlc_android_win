<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/default_margin"
    tools:context="org.videolan.vlc.gui.dialogs.AdvOptionsDialog">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/half_default_margin"
        android:orientation="horizontal">

        <!-- Sleep Timer -->

        <LinearLayout
            android:id="@+id/sleep_timer_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/sleep_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="true"
                android:src="?attr/ic_sleep_normal_style" />

            <TextView
                android:id="@+id/sleep_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center" />

        </LinearLayout>

        <!-- Playback speed -->

        <LinearLayout
            android:id="@+id/playback_speed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/adv_options_margin"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/playback_speed_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="true"
                android:src="?attr/ic_speed_normal_style" />

            <TextView
                android:id="@+id/playback_speed_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center" />

        </LinearLayout>

        <!-- Play as Audio -->

        <ImageView
            android:id="@+id/play_as_audio_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/adv_options_margin"
            android:clickable="true"
            android:focusable="true"
            android:src="?attr/ic_playasaudio_on" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/half_default_margin"
        android:orientation="horizontal">

        <!-- Subtitle delay -->

        <TextView
            android:id="@+id/spu_delay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:clickable="true"
            android:drawableTop="?attr/ic_subtitledelay"
            android:focusable="true"
            android:gravity="center_horizontal" />

        <!-- Audio delay -->

        <TextView
            android:id="@+id/audio_delay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:clickable="true"
            android:drawableTop="?attr/ic_audiodelay"
            android:focusable="true"
            android:gravity="center_horizontal" />

        <!-- Jump To Time -->

        <TextView
            android:id="@+id/jump_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:clickable="true"
            android:drawableTop="?attr/ic_jumpto_normal_style"
            android:focusable="true"
            android:gravity="center_horizontal" />

        <!-- Equalizer -->

        <TextView
            android:id="@+id/opt_equalizer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:clickable="true"
            android:drawableTop="?attr/ic_equalizer_normal_style"
            android:focusable="true" />

    </RelativeLayout>

    <!-- Chapter -->

    <TextView
        android:id="@+id/jump_chapter_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:drawableLeft="?attr/ic_chapter_normal_style"
        android:focusable="true"
        android:gravity="center_vertical" />

</LinearLayout>

